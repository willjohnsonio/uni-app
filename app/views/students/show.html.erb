<div class="row signup-form">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.name %></span> 
          <p><%= @student.email %></p>
          <p> Enrollments:
          <% if @student.courses.empty? %> 
          None
          <% else %>
            <ul>
            <% @student.courses.each do |course| %>
              <il><%= course.name %></li>
            <% end %>
            </ul>
              <% end %>
          </p>
        </div>
        </div>
        <%if current_user == @student %>
          <%= link_to '<i class="material-icons right">build</i>Edit Your Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
        <% end %>

      </div>
    </div>
  </div>